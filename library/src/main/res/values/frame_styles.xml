        <!--        &lt;!&ndash;状态栏颜色&ndash;&gt;-->
        <!--        <item name="colorPrimaryDark">?attr/appThemeColor</item>-->
        <!--        &lt;!&ndash;控制各个控件被选中时的颜色&ndash;&gt;-->
        <!--        <item name="colorAccent">?attr/appThemeColor</item>-->
        <!--        &lt;!&ndash;控件的默认色调&ndash;&gt;-->
        <!--        <item name="colorControlNormal">?attr/appThemeColor</item>-->
        <!--        &lt;!&ndash;控件激活时候的色调&ndash;&gt;-->
        <!--        <item name="colorControlActivated">?attr/appThemeColor</item>-->
        <!--        &lt;!&ndash;控件高亮&ndash;&gt;-->
        <!--        <item name="colorControlHighlight">?attr/appControlHighlight</item>-->

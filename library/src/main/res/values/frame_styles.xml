        <!--        <item name="colorButtonNormal">?attr/appThemeColor</item>-->
        <!--        <item name="android:windowBackground">?attr/appBackground</item>-->
    </style>

    <style name="CurToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <!-- 设置该属性解决空白部分-->
    </style>
    <style name="Base_TxtStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textColorHint">@color/txt_gray</item>
        <item name="android:textColorHighlight">@color/txt_gray_light</item>
        <item name="android:textColorLink">@color/blue</item>
        <item name="android:textSize">@dimen/txt_default</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Base_EditStyle" parent="Widget.AppCompat.EditText">
        <item name="android:hint">@string/edit_input_hint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColorHint">@color/txt_gray_light</item>
    </style>

    <style name="Base_BtnStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:minHeight">@dimen/btn_height</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColor">@color/txt_black</item>
    </style>
</resources>